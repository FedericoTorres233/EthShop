generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id         String @id @default(uuid())
  nombre     String
  apellido   String
  direccion  String
  email      String @unique
  avatar_url String
  items      Item[]
}

model Categoria {
  id        String     @id @default(uuid())
  nombre    String
  productos Producto[]
}

model Producto {
  id          String    @id @default(uuid())
  nombre      String
  precio      Int
  stock       Boolean   @default(true)
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId String
  item        Item?     @relation(fields: [itemId], references: [id])
  itemId      String?   @unique
}

model Item {
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId String
  id        String    @id @default(uuid())
  cantidad  String
  producto  Producto?
}
