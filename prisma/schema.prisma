generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id         Int     @id @default(autoincrement())
  nombre     String
  apellido   String
  direccion  String
  email      String  @unique
  avatar_url String
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String
  productos Producto[]
}

model Producto {
  id          Int       @id @default(autoincrement())
  nombre      String
  precio      Int
  stock       Boolean   @default(true)
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId Int
  pedidoId    Int       @unique
}

